<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form class="form-horizontal" action="/user/changepass/{{user.id}}" method="post">
            <div class="panel panel-default">
                <div class="panel-heading">{{user.firstname}} {{user.lastname}} adatlapja</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Vezetéknév</label>
                        <div class="col-lg-10">
                            <div class="well well-sm">{{user.firstname}}</div>
                        </div>    
                        <label class="col-lg-2 control-label">Keresztnév</label>
                        <div class="col-lg-10">
                            <div class="well well-sm">{{user.lastname}}</div>
                        </div> 
                        <label class="col-lg-2 control-label">Cím</label>
                        <div class="col-lg-10">
                            <div class="well well-sm">{{user.address}}</div>
                        </div>
                        <label class="col-lg-2 control-label">Helység</label>
                        <div class="col-lg-10">
                            <div class="well well-sm">{{user.city}}</div>
                        </div>
                        <label class="col-lg-2 control-label">Irányítószám</label>
                        <div class="col-lg-10">
                            <div class="well well-sm">{{user.zipcode}}</div>
                        </div> 
                    </div>
                    <hr />
                    <div class="form-group">
                        <label for="oldpassword" class="col-lg-4 control-label">Jelszó</label>
                        <div class="col-lg-7">
                            <input type="password" name="oldpassword" class="form-control" id="oldpassword" placeholder="Jelszó">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="newpassword" class="col-lg-4 control-label">Új jelszó</label>
                        <div class="col-lg-7">
                            <input type="password" name="newpassword" class="form-control" id="newpassword" placeholder="Új jelszó" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirmpass" class="col-lg-4 control-label">Új jelszó mégegyszer</label>
                        <div class="col-lg-7">
                            <input type="password" name="confirmpass" class="form-control" id="confirmpass" placeholder="Új jelszó mégegyszer" required />
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <center>
                        <a href="/" class="btn btn-default">Vissza</a>
                        <button type="reset" class="btn btn-warning"> Törlés</button>
                        <button type="submit" class="btn btn-primary"> Mentés</button>
                    </center>
                </div>
            </div>
        </form>
    </div>
</div>