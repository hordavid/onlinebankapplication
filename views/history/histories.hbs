<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Forrás számla száma</th>
            <th>Cél számla száma</th>
            <th>Összeg</th>
            <th>Pénznem</th>
            <th>Tranzakció típusa</th>
            <th>Dátum</th>
            <th>Opciók</th>
        </tr>
    </thead>
    <tbody>
        {{#each histories as |history|}}
        <tr class = "{{#if history.increase}}success{{else}}danger{{/if}}">
            <td><a href="/history/histories/{{history.sourceaccount}}">{{history.sourceaccount}}</a></td>
            <td>{{history.targetaccount}}</td>
            <td>{{history.amount}}</td>
            <td><span class="badge">{{history.currency}}</span></td>
            <td>{{#if history.increase}}Utalás{{else}}Terhelés{{/if}}</td>
            <td>{{history.date}}</td>
            <td>
                <a class="btn btn-sm btn-danger" href="/history/delete/{{history.id}}">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table> 
<a href="{{#if all}}/{{else}}/history/histories{{/if}}" class="btn btn-primary">{{#if all}}Vissza{{else}}Minden számla{{/if}}</a>