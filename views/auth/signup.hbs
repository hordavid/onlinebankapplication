<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form class="form-horizontal" action="/auth/signup" method="post">
            <div class="panel panel-default">
                <div class="panel-heading">Regisztrációs űrlap</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="email" class="col-lg-3 control-label">E-mail</label>
                        <div class="col-lg-8">
                            <input type="email" name="email" class="form-control" id="email" placeholder="E-mail" required  />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-lg-3 control-label">Jelszó</label>
                        <div class="col-lg-8">
                            <input type="password" name="password" class="form-control" id="password" placeholder="Jelszó" required  />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirmpass" class="col-lg-3 control-label">Jelszó újra</label>
                        <div class="col-lg-8">
                            <input type="password" name="confirmpass" class="form-control" id="confirmpass" placeholder="Jelszó újra" required  />
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label for="firstname" class="col-lg-3 control-label">Vezetéknév</label>
                        <div class="col-lg-8">
                            <input type="text" name="firstname" class="form-control" id="firstname" placeholder="Vezetéknév" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Lastname" class="col-lg-3 control-label">Keresztnév</label>
                        <div class="col-lg-8">
                            <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Keresztnév" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="address" class="col-lg-3 control-label">Cím</label>
                        <div class="col-lg-8">
                            <input type="text" name="address" class="form-control" id="address" placeholder="Cím" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="city" class="col-lg-3 control-label">Helység</label>
                        <div class="col-lg-8">
                            <input type="text" name="city" class="form-control" id="city" placeholder="Helység" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="zipcode" class="col-lg-3 control-label">Irányítószám</label>
                        <div class="col-lg-8">
                            <input type="text" name="zipcode" class="form-control" id="zipcode" placeholder="Irányítószám" required  />
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <center>
                        <a href="/" class="btn btn-default">Vissza</a>
                        <button type="reset" class="btn btn-warning"> Törlés</button>
                        <button type="submit" class="btn btn-primary"> Regisztráció</button>
                    </center>
                </div>
            </div>
        </form>
    </div>
</div>