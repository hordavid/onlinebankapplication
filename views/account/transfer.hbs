{{#if accounts}}
<div class="col-md-4 col-md-offset-4">
    <form class="form-horizontal" action="/account/transfer" method="post" role="search">
        <div class="panel panel-default">
            <div class="panel-heading">Átutalás</div>
            <div class="panel-body">
                <div class="form-group">    
                    <label for="sourceaccount" class="col-lg-4 control-label">Forrés számla száma</label>
                    <div class="col-lg-7">
                        <select class="form-control" name="sourceaccount" id="sourceaccount">
                            {{#each accounts as |account|}}
                            <option value="{{account.number}}">{{#if account.master}}Fő számla{{else}}{{account.number}}{{/if}} - {{account.currency}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group">    
                    <label for="targetaccount" class="col-lg-4 control-label">Cél számla száma</label>
                    <div class="col-lg-7">
                        <select class="form-control" name="targetaccount" id="targetaccount">
                            {{#each accounts as |account|}}
                            <option value="{{account.number}}">{{#if account.master}}Fő számla{{else}}{{account.number}}{{/if}} - {{account.currency}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group">    
                    <label for="amount" class="col-lg-4 control-label">Összeg</label>
                    <div class="col-lg-7">
                        <input type="text" name="amount" class="form-control" id="amount" placeholder="Amount" required />
                    </div>
                </div>
            <div class="panel-footer">
                <center>
                <a href="/" class="btn btn-danger">Mégse</a>
                <button type="reset" class="btn btn-warning">Törlés</button>
                <button type="submit" class="btn btn-success">Utalás</button>
                </center>
            </div>
        </div>
    </form>
</div>
{{else}}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Információ</h3>
    </div>
    <div class="panel-body">
        Nincsenek megjeleníthető számlák.
    </div>
</div>
{{/if}}
<a href="/" class="btn btn-primary">Vissza</a>