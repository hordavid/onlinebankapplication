{{#if accounts}}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        {{#unless all}}
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Számlaszám</th>
                    <th>Egyenleg</th>
                    <th>Pénznem</th>
                </tr>
            </thead>
            <tbody>
                <tr class="active">
                    <td>{{accounts.number}}</a></td>
                    <td>{{accounts.balance}}</td>
                    <td><span class="badge">{{accounts.currency}}</span></td>
                </tr>
            </tbody>
        </table>
        <a href="/account/balance" class="btn btn-primary">Minden számla</a>
        {{else}}
        <ul class="list-group">
            {{#each accounts as |account|}}
            <li class="list-group-item">
                <span class="badge">{{account.currency}}</span>
                <td><a href="/account/balance/{{account.id}}">{{#if account.master}}Fő számla{{else}}{{account.number}}{{/if}}</a></td>
            </li>
            {{/each}}
        </ul>
        <a href="/" class="btn btn-primary">Vissza</a>
        {{/unless}}
    </div>
</div>
{{else}}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Információ</h3>
    </div>
    <div class="panel-body">
        Nincsenek megjeleníthető számlák.
    </div>
</div>
<a href="/" class="btn btn-primary">Vissza</a>
{{/if}}