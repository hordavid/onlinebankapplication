<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form class="form-horizontal" action="/account/create" method="post">
            <fieldset>
                <legend>Virtuális számla igénylés</legend>
                <p class="text-muted">Tulajdonos adatai</p>
                <hr />
                <div class="form-group">
                    <label class="col-lg-2 control-label">Vezeték név</label>
                    <div class="col-lg-10">
                        <div class="well well-sm">{{user.firstname}}</div>
                    </div>    
                    <label class="col-lg-2 control-label">Kereszt név</label>
                    <div class="col-lg-10">
                        <div class="well well-sm">{{user.lastname}}</div>
                    </div> 
                    <label class="col-lg-2 control-label">Irányítószám</label>
                    <div class="col-lg-10">
                        <div class="well well-sm">{{user.zipcode}}</div>
                    </div> 
                    <label class="col-lg-2 control-label">Helység</label>
                    <div class="col-lg-10">
                        <div class="well well-sm">{{user.city}}</div>
                    </div> 
                    <label class="col-lg-2 control-label">Cím</label>
                    <div class="col-lg-10">
                        <div class="well well-sm">{{user.address}}</div>
                    </div> 
                </div>
                <hr />
                <p class="text-muted">Számla adatai</p>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Számlaszám</label>
                    <div class="col-lg-10">
                        <div class="well well-sm">{{accountnumber}}</div>
                    </div> 
                    <input type="hidden" name="accountnumber" value="{{accountnumber}}" />
                </div>
                <div class="form-group">
                    <label for="select" class="col-lg-2 control-label">Pénznem</label>
                    <div class="col-lg-2">
                        <select class="form-control" name="currency" id="currency">
                            <option value="HUF">HUF</option>
                            <option value="EUR">EUR</option>
                            <option value="USD">USD</option>
                            <option value="GBP">GBP</option>
                            <option value="CHF">CHF</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-4">
                        <a href="/" class="btn btn-default">Vissza</a>
                        <button type="reset" class="btn btn-warning">Törlés</button>
                        <button type="submit" class="btn btn-primary">Kész</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>    